---
import { cn } from '../utils'

interface Props {
    href: string
    class?: string
    alt?: string
    blank?: boolean
}

const { href, class: className, alt, blank = true } = Astro.props
---
<a 
    class={cn('hover:text-accent', className)}
    href={href}
    target={blank ? "_blank" : undefined}
    aria-label={alt}
>
    <slot />
</a>