---
interface Props {
    title: string
    link: string
    sourceLink: string
}

const { title, link, sourceLink } = Astro.props
---

<div class="flex flex-col gap-2 bg-fg rounded p-4 shadow-lg">
    <h2 class="text-2xl">{title}</h2>
    <slot />
    <div class="flex gap-2 pt-2">
        <a
            href={`https://${link}`}
            target="_blank"
            rel="noreferrer"
            class="underline"
        >
            {link}
        </a>
        <a 
            href={sourceLink} 
            target="_blank" 
            rel="noreferrer" 
            class="underline"
        >
            View on Github!
        </a>
    </div>
</div>