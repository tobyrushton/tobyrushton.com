---
import { ExternalLink, Github } from 'lucide-astro'
import Link from './link.astro'

interface Props {
    title: string
    link: string
    repository: string
}

const { title, link, repository } = Astro.props
---
<div
    class="flex flex-col gap-2 hover:bg-fg rounded p-4 shadow-lg"
>
    <span class="flex justify-between">
        <h2 class="text-xl font-medium">{title}</h2>
        <span class="flex gap-2 text-text-secondary">
            <Link 
                href={`https://github.com/${repository}`}
                alt={`Link to ${title} repository on GitHub`}
            >
                <Github size="16" />
            </Link>
            <Link href={link} alt={`Link to ${title} website`}>
                <ExternalLink size="16" /> 
            </Link>
        </span>
    </span>
    <p class="text-text-secondary">
        <slot />
    </p>
</div>